<form class="{{options.cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="anarchy-img profile-img" src="{{data.img}}" data-edit="img" data-tooltip="{{data.name}}"/>
    {{> 'systems/anarchy/templates/item/parts/itemname.hbs'
      labelkey='ANARCHY.itemType.singular.skill'
      type="skill"
    }}
  </header>
  <section class="sheet-body">
    <div class="form-group">
      <label>{{localize 'ANARCHY.item.skill.copyDefault'}} </label>
      <select class="select-skill-code" data-dtype="String">
        {{> 'systems/anarchy/templates/common/enum-value-label.hbs' entries=ENUMS.skills}}
      </select>
    </div>
    <div class="form-group">
      <label for="system.code">{{localize 'ANARCHY.item.skill.code'}}</label>
      <input class="item-field-value" type="text" name="system.code" value="{{system.code}}" data-dtype="String" disabled/>
    </div>
    {{#unless (or (eq system.code 'knowledge') (eq system.attribute 'knowledge') (eq system.attribute '')) }}
    <div class="form-group">
      <label for="system.value">{{localize 'ANARCHY.item.skill.value'}} </label>
      <input class="type-numeric" type="number" name="system.value" value="{{system.value}}" data-dtype="Number"/>
    </div>
    <div class="form-group">
      <label for="system.attribute">{{localize 'ANARCHY.item.skill.attribute'}} </label>
      <select class="item-field-value" name="system.attribute" data-dtype="String">
        {{#select system.attribute}}
        {{> 'systems/anarchy/templates/common/enum-value-label.hbs' entries=ENUMS.attributes}}
        {{/select}}
      </select>
    </div>
    <div class="form-group">
      <label for="system.specialization">{{localize 'ANARCHY.item.skill.specialization'}} </label>
      <input class="item-field-value" type="text" data-dtype="String"
          name="system.specialization" value="{{system.specialization}}"
          placeholder="{{localize 'ANARCHY.item.skill.specializationHelp'}}"
      />
    </div>
    <div class="form-group">
      <input name="system.isSocial" class="item-field-value" type="checkbox" {{checked system.isSocial}}>
        {{localize 'ANARCHY.item.skill.isSocial'}}
      </input>
    </div>
    <div class="form-group">
      <input name="system.hasDrain" class="item-field-value" type="checkbox" {{checked system.hasDrain}}>
        {{localize 'ANARCHY.item.skill.hasDrain'}}
      </input>
    </div>
    <div class="form-group">
      <input name="system.hasConvergence" class="item-field-value" type="checkbox" {{checked system.hasConvergence}}>
        {{localize 'ANARCHY.item.skill.hasConvergence'}}
      </input>
    </div>
    {{/unless}}
    {{> 'systems/anarchy/templates/item/parts/inactive.hbs'}}
    {{> 'systems/anarchy/templates/item/parts/references.hbs'}}
  </section>

</form>
