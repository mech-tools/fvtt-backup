<div
  class="item wrapper-hexabox gear anarchy-gear {{#if system.inactive}}inactive{{/if}}"
  data-item-id="{{_id}}" data-item-type="gear" draggable="true">
  {{> "systems/anarchy/templates/actor/character-enhanced/hexabox.hbs"}}
  <div class="content">
    <div class="item define-owned-actor" data-actor-id="{{id}}">
      <a class="click-owned-actor-view">
        {{> 'systems/anarchy/templates/common/actor-reference.hbs' this}}
      </a>
      <a class="item-control click-owned-actor-unlink"
        data-tooltip="{{localize ANARCHY.common.del}}">
        {{{iconFA 'fas fa-trash'}}}
      </a>
    </div>

  </div>
</div>
