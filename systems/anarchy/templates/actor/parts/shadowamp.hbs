 <div class="define-item-type item anarchy-shadowamp {{#if system.inactive}}inactive{{/if}}" data-item-id="{{_id}}" data-item-type="shadowamp">
  <img class="anarchy-img item-img" src="{{img}}" alt="{{name}}" title="{{name}}"/>
  <div class="shadowamp-content">
    <label>{{name}}</label>
    <label>({{localize 'ANARCHY.item.shadowamp.levelShort'}} {{system.level}})</label>
    {{#if (localize 'ANARCHY.actor.counters.essence')}}
    {{#if system.essence}}<label>{{localize 'ANARCHY.item.shadowamp.essenceShort'}} {{system.essence}}</label>{{/if}}
    {{/if}}
    {{>'systems/anarchy/templates/actor/character/description.hbs' description=system.description}}
  </div>
  <div class="item-controls">
    {{> 'systems/anarchy/templates/common/item-controls.hbs'}}
  </div>

</div>
